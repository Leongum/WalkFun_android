<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:alpha="0.7" android:id="@+id/settingShareMainLayout">

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/settingShareMainTxtTitle" android:layout_alignParentLeft="false"
            android:layout_alignParentTop="true" android:layout_marginTop="20dp" android:gravity="center"
            android:textColor="#ffffff"/>
    <ImageView
            android:layout_width="200dp"
            android:layout_height="340dp"
            android:id="@+id/settingShareMainImgPage" android:layout_alignLeft="@+id/settingShareMainTxtTitle" android:layout_below="@+id/settingShareMainTxtTitle"
            android:layout_marginTop="20dp" android:layout_marginLeft="60dp"/>
    <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/settingShareMainBtnWeibo" android:layout_alignLeft="@+id/settingShareMainTxtTitle" android:layout_below="@+id/settingShareMainImgPage"
            android:background="@drawable/weibo" android:layout_marginTop="5dp" android:layout_marginLeft="15dp"/>
    <Button android:layout_width="55dp" android:layout_height="55dp" android:id="@+id/settingShareMainBtnRenren"
            android:background="@drawable/renren" android:layout_toRightOf="@+id/settingShareMainBtnWeibo"
            android:layout_alignTop="@+id/settingShareMainBtnWeibo" android:layout_marginLeft="15dp"/>
    <Button android:layout_width="55dp" android:layout_height="55dp" android:id="@+id/settingShareMainBtnWeixinFriend"
            android:background="@drawable/weixin_friend"
            android:layout_toRightOf="@+id/settingShareMainBtnRenren" android:layout_alignTop="@+id/settingShareMainBtnWeibo"
            android:layout_marginLeft="15dp"/>
</RelativeLayout>