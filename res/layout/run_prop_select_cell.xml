<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
            android:layout_width="320dp"
            android:layout_height="83dp"
            android:id="@+id/runPropSelectCellImgBg" android:background="@drawable/item_mall_cell"/>
    <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/runPropSelectCellImgIcon" android:layout_alignParentLeft="true" android:layout_marginLeft="18.5dp"
            android:layout_alignParentTop="true" android:layout_marginTop="11dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一般也就6个字"
            android:id="@+id/runPropSelectCellTxtName" android:layout_toRightOf="@+id/runPropSelectCellImgIcon"
            android:layout_alignTop="@+id/runPropSelectCellImgIcon" android:textStyle="bold" android:textSize="20dip"
            android:textColor="#000000" android:layout_marginLeft="10dp" android:layout_marginTop="3dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这里是描述哦"
            android:id="@+id/runPropSelectCellTxtDesc" android:layout_alignLeft="@+id/runPropSelectCellTxtName" android:layout_below="@+id/runPropSelectCellTxtName"
            android:textSize="14dip" android:textColor="#fff61b" android:layout_marginTop="5dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="X10"
            android:id="@+id/runPropSelectCellTxtNum"
            android:layout_alignParentRight="true" android:layout_alignParentTop="true" android:gravity="center"
            android:textSize="24dip" android:textColor="#fff61b" android:layout_marginRight="15dp"/>
</RelativeLayout>