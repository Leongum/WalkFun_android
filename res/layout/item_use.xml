<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/item_mall_bg">
    <ImageView
            android:layout_width="320dp"
            android:layout_height="102dp"
            android:id="@+id/itemUseImgTitle" android:background="@drawable/history_title"/>
    <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/itemUseBtnReturn"
            android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
            android:background="@drawable/back_button" android:layout_marginTop="9dp"
            android:layout_marginLeft="14dp"/>
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemUseListFriend" android:layout_alignParentLeft="true"
            android:layout_below="@+id/itemUseImgTitle" android:layout_alignParentBottom="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择目标"
            android:id="@+id/itemUseTxtTitleName" android:layout_toRightOf="@+id/itemUseBtnReturn"
            android:layout_alignTop="@+id/itemUseBtnReturn" android:textColor="#ffffff" android:textSize="28dip"
            android:layout_marginLeft="30dp" android:layout_marginTop="10dp"/>
</RelativeLayout>