<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/item_mall_bg">
    <ImageView
            android:layout_width="320dp"
            android:layout_height="102dp"
            android:id="@+id/actionHistoryImgTitle" android:background="@drawable/history_title"/>
    <Button
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:id="@+id/actionHistoryBtnReturn" android:layout_alignLeft="@+id/actionHistoryImgTitle"
            android:layout_alignTop="@+id/actionHistoryImgTitle" android:background="@drawable/back_button"
            android:layout_marginTop="8dp" android:layout_marginLeft="13dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="恩仇录"
            android:id="@+id/actionHistoryTxtTitle"
            android:textColor="#ffffff" android:textSize="32dip"
            android:layout_centerHorizontal="true" android:layout_alignTop="@+id/actionHistoryImgTitle"
            android:layout_marginTop="17dp"/>
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/actionHistoryListActions" android:layout_alignLeft="@+id/actionHistoryImgTitle" android:layout_below="@+id/actionHistoryImgTitle"/>
</RelativeLayout>