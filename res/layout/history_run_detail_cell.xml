<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android"
        android:clickable="false">
    <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/historyRunDetailCellImgFight"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="大概在58秒的时候"
            android:id="@+id/historyRunDetailCellTxtTime"
            android:textSize="10dp" android:textColor="#000000"
            android:layout_toRightOf="@+id/historyRunDetailCellImgFight"
            android:layout_alignTop="@+id/historyRunDetailCellImgFight" android:gravity="center_vertical"/>
    <TextView
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="事件描述大概能写多少个字呢？？"
            android:id="@+id/historyRunDetailCellTxtAction"
            android:textColor="#000000" android:gravity="center_vertical" android:textSize="16dip"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/historyRunDetailCellTxtTime" android:minHeight="40dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="经验值+10 体力-5"
              android:id="@+id/historyRunDetailCellExperience" android:textSize="12dip" android:textColor="#000000"
              android:layout_alignRight="@+id/historyRunDetailCellTxtAction"
              android:layout_below="@+id/historyRunDetailCellTxtAction" android:gravity="center_vertical"
              android:visibility="visible"/>
    <TextView android:layout_width="240dp" android:layout_height="25dp" android:text="获得了什么道具或者影响到了什么属性"
              android:id="@+id/historyRunDetailCellTxtReward"
              android:textSize="12dip"
              android:textColor="#000000"
              android:layout_alignRight="@+id/historyRunDetailCellTxtAction" android:layout_below="@+id/historyRunDetailCellExperience"
              android:background="@drawable/textfield" android:gravity="center_vertical|right"/>
</RelativeLayout>