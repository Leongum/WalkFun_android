<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#ffffff" android:id="@+id/friendSearchCellReturn">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:id="@+id/friendSearchCellName" android:textColor="#000000" android:layout_marginLeft="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Title"
            android:id="@+id/friendSearchCellTitle"
            android:layout_toRightOf="@+id/friendSearchCellName" android:layout_alignTop="@+id/friendSearchCellName"
            android:layout_marginLeft="15dp" android:textColor="#535353"/>
    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/friendSearchCellSex" android:layout_alignLeft="@+id/friendSearchCellName" android:layout_below="@+id/friendSearchCellName"
            android:layout_marginLeft="10dp" android:layout_marginTop="5dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Level"
              android:id="@+id/friendSearchCellLevel"
              android:textSize="12dp"
              android:layout_toRightOf="@+id/friendSearchCellSex" android:layout_alignBottom="@+id/friendSearchCellSex"
              android:layout_marginLeft="15dp" android:textColor="#000000"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关注"
            android:id="@+id/friendSearchCellFollow" android:layout_alignParentRight="true" android:layout_alignTop="@+id/friendSearchCellName"
            android:background="#ffffff" android:textColor="#3399ff" android:layout_marginRight="20dp"
            android:layout_marginTop="14dp"/>
</RelativeLayout>