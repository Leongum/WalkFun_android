<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/main_bg">
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" android:id="@+id/relativeLayout">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间 ："
                android:id="@+id/historyRunDetailTxtTimeTitle" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
                android:textColor="#000000" android:layout_marginLeft="30dp" android:layout_marginTop="20dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="步数 ："
                  android:id="@+id/historyRunDetailTxtStepsTitle"
                  android:textColor="#000000" android:layout_alignLeft="@+id/historyRunDetailTxtTimeTitle"
                  android:layout_below="@+id/historyRunDetailTxtTimeTitle"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="23秒"
                  android:id="@+id/historyRunDetailTxtTime"
                  android:textColor="#000000" android:layout_toRightOf="@+id/historyRunDetailTxtTimeTitle"
                  android:layout_alignTop="@+id/historyRunDetailTxtTimeTitle" android:layout_marginLeft="30dp" android:textStyle="bold"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="约40步"
                  android:id="@+id/historyRunDetailTxtSteps" android:textColor="#000000"
                  android:layout_alignLeft="@+id/historyRunDetailTxtTime" android:layout_below="@+id/historyRunDetailTxtTimeTitle" android:textStyle="bold"/>
        <Button
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:id="@+id/historyRunDetailBtnMap" android:layout_alignParentRight="true" android:layout_alignParentTop="true"
                android:background="@drawable/settings" android:layout_marginTop="10dp"/>
    </RelativeLayout>
    <ListView
            android:layout_width="280dp"
            android:layout_height="340dp"
            android:id="@+id/historyRunDetailListAction" android:layout_marginTop="80dp"
            android:layout_marginLeft="20dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="道具获得"
            android:id="@+id/historyRunDetailTxtReward"
            android:textColor="#000000"
            android:layout_alignLeft="@+id/relativeLayout" android:layout_below="@+id/historyRunDetailListAction"
            android:layout_marginTop="10dp" android:layout_marginLeft="20dp"/>
</RelativeLayout>