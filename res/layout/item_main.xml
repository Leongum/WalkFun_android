<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        >
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:visibility="visible">
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:id="@+id/itemMainLayoutTitle">
            <ImageView
                    android:layout_width="320dp"
                    android:layout_height="85dp"
                    android:id="@+id/itemMainImgTop" android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
                    android:background="@drawable/item_title_board"/>
            <Button
                    android:layout_width="83dp"
                    android:layout_height="61dp"
                    android:id="@+id/itemMainBtnMall" android:layout_alignRight="@+id/itemMainImgTop"
                    android:layout_alignTop="@+id/itemMainImgTop" android:background="@drawable/itemmall_button"
                    android:layout_marginTop="10dp" android:layout_marginRight="30dp"/>
            <TextView
                    android:layout_width="70dp"
                    android:layout_height="16dp"
                    android:text="12345"
                    android:id="@+id/itemMainTxtMoney" android:layout_alignLeft="@+id/itemMainBtnMall"
                    android:layout_alignTop="@+id/itemMainBtnMall" android:layout_marginTop="8dp"
                    android:gravity="right|fill_vertical" android:textSize="12dp" android:textColor="#ffffff"
                    android:textStyle="bold"/>
        </RelativeLayout>
        <ImageView
                android:layout_width="320dp"
                android:layout_height="568dp"
                android:id="@+id/itemMainImgTableBg" android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/item_table_bg"/>
        <GridView
                android:layout_width="280dp"
                android:layout_height="260dp"
                android:id="@+id/itemMainGridProps" android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" android:layout_marginTop="120dp" android:layout_marginLeft="20dp"
                android:numColumns="3" android:horizontalSpacing="10dp"
                android:verticalSpacing="10dp" android:fastScrollEnabled="true"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/itemMainLayoutUse" android:visibility="gone"
            >
        <RelativeLayout
                android:layout_width="245dp"
                android:layout_height="384dp" android:background="@drawable/challenge_pop_bg"
                android:layout_centerHorizontal="true" android:layout_centerVertical="true">
            <TextView android:layout_width="fill_parent" android:layout_height="25dp" android:text="Name"
                      android:id="@+id/itemMainTxtName" android:textSize="16dip" android:gravity="center"
                      android:inputType="text|textMultiLine" android:textColor="#000000"
                      android:textStyle="bold" android:layout_alignParentLeft="true"
                      android:layout_alignParentTop="true" android:layout_marginTop="15dp"/>
            <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/itemMainImgUseShow"
                    android:layout_alignLeft="@+id/itemMainTxtName" android:layout_below="@+id/itemMainTxtName"
                    android:layout_marginLeft="70dp" android:layout_marginTop="50dp"/>
            <TextView
                    android:layout_width="165dp"
                    android:layout_height="40dp"
                    android:text="How to use"
                    android:id="@+id/itemMainTxtAttribute"
                    android:textSize="16dp" android:gravity="center"
                    android:inputType="text|textMultiLine" android:textColor="#ffffff"
                    android:layout_alignParentLeft="true" android:layout_marginLeft="40dp"
                    android:layout_below="@+id/itemMainImgUseShow" android:layout_marginTop="10dp"
                    android:textStyle="bold"/>
            <TextView android:layout_width="145dp" android:layout_height="60dp" android:text="How to use"
                      android:id="@+id/itemMainTxtDesc" android:textSize="14dip"
                      android:inputType="text|textMultiLine" android:textColor="#ffffff"
                      android:gravity="center_vertical" android:layout_alignLeft="@+id/itemMainTxtAttribute"
                      android:layout_below="@+id/itemMainTxtAttribute" android:layout_marginTop="10dp"
                      android:layout_marginLeft="10dp"/>
            <Button
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="使用"
                    android:id="@+id/itemMainBtnUse"
                    android:background="@drawable/running_end_bg"
                    android:textStyle="bold" android:textSize="18dip"
                    android:layout_alignLeft="@+id/itemMainTxtAttribute" android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>