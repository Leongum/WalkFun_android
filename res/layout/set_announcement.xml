<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/main_bg">
    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/setAnnouncementImgBg" android:background="@drawable/paper"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="官方公告"
            android:id="@+id/setAnnouncementTxtTitle" android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            android:textColor="#ffffff" android:textSize="32dp" android:layout_marginTop="15dp"/>
    <TextView
            android:layout_width="220dp"
            android:layout_height="250dp"
            android:text="如果你看到这段文字，说明网络连接有问题~"
            android:id="@+id/setAnnouncementTxtDesc" android:layout_alignLeft="@+id/setAnnouncementImgBg"
            android:layout_alignTop="@+id/setAnnouncementImgBg" android:textColor="#000000"
            android:layout_marginTop="125dp" android:layout_marginLeft="50dp" android:inputType="textMultiLine"/>
    <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/setAnnouncementBtnReturn" android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/setAnnouncementImgBg" android:background="@drawable/back_bg"
            android:layout_marginTop="6dp"/>
</RelativeLayout>