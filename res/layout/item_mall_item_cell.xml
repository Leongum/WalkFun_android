<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/itemMallCellImgIcon" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="半块砖头"
            android:id="@+id/itemMallCellTxtTitle" android:layout_toRightOf="@+id/itemMallCellImgIcon"
            android:layout_alignTop="@+id/itemMallCellImgIcon" android:layout_marginLeft="10dp" android:layout_marginTop="8dp"
            android:textColor="#ffffff"/>
    <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/itemMallCellTxtDesc" android:layout_alignLeft="@+id/itemMallCellTxtTitle" android:layout_below="@+id/itemMallCellTxtTitle"
            android:textSize="10dp" android:layout_marginTop="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$200"
            android:id="@+id/itemMallCellTxtMoney"
            android:layout_alignRight="@+id/itemMallCellTxtDesc" android:layout_alignTop="@+id/itemMallCellTxtTitle"
            />
</RelativeLayout>