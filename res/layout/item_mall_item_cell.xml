<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="320dp"
        android:layout_height="83dp" xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/item_mall_cell">
    <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/itemMallCellImgIcon" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp" android:layout_marginTop="12dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这是半块砖头"
            android:id="@+id/itemMallCellTxtTitle" android:layout_toRightOf="@+id/itemMallCellImgIcon"
            android:layout_alignTop="@+id/itemMallCellImgIcon" android:layout_marginLeft="10dp"
            android:textColor="#000000" android:textStyle="bold" android:textSize="16dip"
            android:layout_marginTop="3dp"/>
    <TextView
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:text="这里一般来说是放一些描述的呢"
            android:id="@+id/itemMallCellTxtDesc" android:layout_alignLeft="@+id/itemMallCellTxtTitle" android:layout_below="@+id/itemMallCellTxtTitle"
            android:textSize="12dp" android:layout_marginTop="3dp" android:textColor="#000000"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="200"
            android:id="@+id/itemMallCellTxtMoney"
            android:layout_alignRight="@+id/itemMallCellTxtDesc" android:layout_alignTop="@+id/itemMallCellTxtTitle"
            android:textColor="#000000" android:gravity="center_vertical"/>
    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/itemMallCellImgCoin"
            android:background="@drawable/coin" android:layout_toLeftOf="@+id/itemMallCellTxtMoney"
            android:layout_alignTop="@+id/itemMallCellTxtTitle"/>
</RelativeLayout>