<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android"
        android:clickable="false">
    <ImageView
            android:layout_width="320dp"
            android:layout_height="83dp"
            android:id="@+id/runFriendSelectCellImgBg" android:background="@drawable/friend_add_cell"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="好友名字"
            android:id="@+id/runFriendSelectCellTxtName" android:textColor="#000000" android:textSize="22dp" android:textStyle="bold"
            android:layout_marginTop="14dp" android:layout_marginLeft="20dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="战斗力"
            android:id="@+id/runFriendSelectCellTxtFightTitle" android:layout_alignLeft="@+id/runFriendSelectCellTxtName" android:layout_below="@+id/runFriendSelectCellTxtName"
            android:textSize="15dip" android:textColor="#fffd01" android:layout_marginTop="4dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="战斗力"
              android:id="@+id/runFriendSelectCellTxtFight"
              android:textSize="15dip" android:textColor="#FFFFFF" android:layout_toRightOf="@+id/runFriendSelectCellTxtFightTitle"
              android:layout_alignTop="@+id/runFriendSelectCellTxtFightTitle" android:layout_marginLeft="10dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="能力提升"
              android:id="@+id/runFriendSelectCellTxtUp"
              android:textSize="15dip" android:textColor="#fffd01" android:layout_alignRight="@+id/runFriendSelectCellImgBg"
              android:layout_alignTop="@+id/runFriendSelectCellTxtName" android:layout_marginRight="15dp" android:layout_marginTop="3dp"/>
</RelativeLayout>