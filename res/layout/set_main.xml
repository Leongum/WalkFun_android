<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="@drawable/history_detail_bg">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="102dp"
            android:id="@+id/setMainImgTitle" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
            android:background="@drawable/history_title"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="152dp"
            android:id="@+id/setMainImgBottom"
            android:background="@drawable/history_detail_sum"
            android:layout_alignLeft="@+id/setMainImgTitle" android:layout_alignParentBottom="true"/>
    <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/setMainBtnReturn" android:layout_alignLeft="@+id/setMainImgTitle"
            android:layout_alignTop="@+id/setMainImgTitle" android:background="@drawable/back_button"
            android:layout_marginLeft="14dp" android:layout_marginTop="9dp"/>
    <Button android:layout_width="58dp" android:layout_height="58dp" android:id="@+id/setMainBtnLogout"
            android:background="@drawable/running_ready_del" android:layout_alignRight="@+id/setMainImgTitle"
            android:layout_alignParentTop="true" android:layout_marginTop="7dp" android:layout_marginRight="7dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="新浪微博: @报告村长App" android:id="@+id/setMainTxtSina"
              android:textColor="#000000"
              android:layout_alignLeft="@+id/setMainTxtWeixin"
              android:layout_above="@+id/setMainTxtWeixin" android:layout_marginBottom="15dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信（订阅号）: 报告村长"
            android:id="@+id/setMainTxtWeixin"
            android:textColor="#000000"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true" android:layout_marginBottom="30dp" android:layout_marginLeft="35dp"/>
    <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/setMainBtnWriteUs" android:layout_alignRight="@+id/setMainBtnLogout"
            android:layout_alignTop="@+id/setMainTxtSina" android:background="@drawable/write_us"
            android:layout_marginRight="25dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多"
            android:id="@+id/setMainTxtMore"
            android:textColor="#ffffff" android:layout_centerHorizontal="true"
            android:layout_alignBaseline="@+id/setMainBtnReturn" android:layout_marginTop="20dp"
            android:textSize="28dip"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setMainImgActionUpdated"
            android:background="@drawable/check"
            android:visibility="gone" android:layout_toLeftOf="@+id/setMainTxtAbout"
            android:layout_alignTop="@+id/setMainTxtActions"/>
    <TextView
            android:layout_width="210dp"
            android:layout_height="28dp"
            android:text="恩仇录"
            android:id="@+id/setMainTxtActions"
            android:textColor="#000000" android:textStyle="bold"
            android:textSize="19dip" android:gravity="center_vertical"
            android:layout_alignLeft="@+id/setMainImgTitle" android:layout_below="@+id/setMainImgTitle"
            android:layout_marginTop="20dp" android:layout_marginLeft="45dp"/>
    <Button
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:id="@+id/setMainBtnActions" android:layout_toRightOf="@+id/setMainTxtActions"
            android:layout_alignTop="@+id/setMainTxtActions" android:background="@drawable/details"/>
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:id="@+id/setMainImgNoticeUpdated" android:background="@drawable/check"
               android:layout_alignParentTop="false"
               android:layout_alignTop="@+id/setMainTxtNotice" android:layout_toLeftOf="@+id/setMainTxtAbout"
               android:visibility="gone"/>
    <TextView android:layout_width="210dp" android:layout_height="28dp" android:text="官方公告" android:id="@+id/setMainTxtNotice"
              android:textColor="#000000"
              android:textStyle="bold" android:textSize="19dip" android:gravity="center_vertical"
              android:layout_alignLeft="@+id/setMainTxtActions" android:layout_below="@+id/setMainTxtActions"
              android:layout_marginTop="12dp"/>
    <Button android:layout_width="28dp" android:layout_height="28dp" android:id="@+id/setMainBtnNotice"
            android:background="@drawable/details"
            android:layout_alignLeft="@+id/setMainBtnLogout" android:layout_alignTop="@+id/setMainTxtNotice"/>
    <TextView android:layout_width="42dp" android:layout_height="28dp" android:text="关于" android:id="@+id/setMainTxtAbout"
              android:textColor="#000000" android:textSize="19dip"
              android:gravity="center_vertical"
              android:layout_alignLeft="@+id/setMainTxtActions" android:layout_below="@+id/setMainTxtNotice"
              android:layout_marginTop="12dp"/>
    <Button android:layout_width="28dp" android:layout_height="28dp" android:id="@+id/setMainBtnAbout"
            android:background="@drawable/details"
            android:layout_alignLeft="@+id/setMainBtnLogout" android:layout_alignTop="@+id/setMainTxtAbout"/>
    <TextView android:layout_width="62dp" android:layout_height="28dp" android:text="报告村长" android:id="@+id/setMainTxtAboutWalkfun"
              android:textColor="#ffffff" android:textSize="19dip"
              android:gravity="center_vertical"
              android:layout_toRightOf="@+id/setMainTxtAbout" android:layout_alignTop="@+id/setMainTxtAbout"
              android:layout_toLeftOf="@+id/setMainBtnLogout"/>
</RelativeLayout>